<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Image</title>

    <!-- Bootstrap 4 Only -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Summernote CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-bs4.min.css"
      rel="stylesheet"
    />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
      body {
        background: #f8f9fa;
        width: 80%;
        margin-left: 10%;
      }
      h1,
      h2,
      h3 {
        color: #343a40;
      }
      .collapse {
        transition: height 0.4s ease;
      }
      .form-section {
        background: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 3rem;
        border: 1px solid #e3e3e3;
      }
      .form-group label {
        font-weight: 600;
      }
      .btn {
        border-radius: 20px;
      }
      .btn-primary {
        min-width: 130px;
      }
      .form-floating-label {
        position: relative;
        margin-bottom: 1.5rem;
      }

      .form-floating-label {
        position: relative;
        margin-bottom: 1.5rem;
      }

      .form-floating-label textarea {
        width: 100%;
        padding: 1.2rem 0.75rem 0.4rem 0.75rem;
        font-size: 0.95rem;
        border: 2px solid #1a73e8;
        border-radius: 5px;
        resize: vertical;
        line-height: 1.3;
        min-height: 60px; /* adjust to make it compact */
      }

      .form-floating-label label {
        position: absolute;
        top: 10px;
        left: 12px;
        background: white;
        padding: 0 4px;
        color: #1a73e8;
        font-size: 0.85rem;
        pointer-events: none;
        transition: 0.2s ease;
      }

      .form-floating-label textarea:focus + label,
      .form-floating-label textarea:not(:placeholder-shown) + label {
        top: -10px;
        left: 10px;
        font-size: 0.75rem;
        background: white;
      }
    </style>
  </head>

  <body>
    <br />
    <h1>Edit the Event Page Section</h1>
    <br />
    <div class="container mt-4">
      <h2 class="mb-4 text-center">Course Management</h2>

      <!-- Toggle Button -->
      <div class="text-center mb-3">
        <button
          class="btn btn-primary"
          type="button"
          data-toggle="collapse"
          data-target="#addCourseForm"
          aria-expanded="false"
          aria-controls="addCourseForm"
        >
          + Add New Course
        </button>
      </div>

      <!-- Collapsible Form -->
      <div class="collapse" id="addCourseForm">
        <div class="form-section">
          <form
            action="/add-course"
            method="POST"
            enctype="multipart/form-data"
          >
            <!-- Course Details -->
            <div class="form-group">
              <label>Course Name</label>
              <input type="text" name="name" class="form-control" required />
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Rating (out of 5)</label>
                <input
                  type="number"
                  name="rating"
                  step="0.1"
                  class="form-control"
                />
              </div>
              <div class="form-group col-md-6">
                <label>Fees (INR)</label>
                <input
                  type="number"
                  name="fees"
                  class="form-control"
                  required
                />
              </div>
            </div>

            <div class="form-group">
              <label>Course Image</label>
              <input type="file" name="courseImage" class="form-control-file" />
            </div>

            <div class="form-group">
              <label>Brochure PDF</label>
              <input type="file" name="pdf" class="form-control-file" />
            </div>

            <!-- Topic Cover Content -->
            <div class="form-group">
              <label>Topic Cover Content</label>
              <textarea
                name="topicCoverContent"
                class="form-control summernote"
                rows="4"
              ></textarea>
            </div>

            <!-- Dynamic Topics -->
            <div class="form-group">
              <label>Topics Covered</label>
              <div id="topics-wrapper">
                <div class="topic-row">
                  <input
                    type="text"
                    name="topics[0][name]"
                    class="form-control"
                    placeholder="Topic Name"
                    required
                  />
                  <input
                    type="text"
                    name="topics[0][duration]"
                    class="form-control"
                    placeholder="Duration"
                    required
                  />
                  <button type="button" class="btn btn-danger remove-topic">
                    &times;
                  </button>
                </div>
              </div>
              <button type="button" class="btn btn-info mt-2" id="add-topic">
                + Add Topic
              </button>
            </div>

            <!-- SEO Fields -->
            <hr />
            <h5>SEO Meta Information</h5>

            <div class="form-group">
              <label>Meta Title</label>
              <input type="text" name="metaTitle" class="form-control" />
            </div>

            <div class="form-group">
              <label>Meta Description</label>
              <textarea
                name="metaDescription"
                class="form-control"
                rows="2"
              ></textarea>
            </div>

            <div class="form-group">
              <label>Meta Keywords</label>
              <input type="text" name="metaKeywords" class="form-control" />
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-success px-5">
                Submit Course
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="container mt-5">
      <h2 class="mb-4">All Courses</h2>
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Fees</th>
            <th>Rating</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (courses && courses.length > 0) { %> <%
          courses.forEach(function(course) { %>
          <tr>
            <td>
              <% if (course.courseImage) { %>
              <img
                src="<%= course.courseImage %>"
                width="100"
                height="80"
                style="object-fit: cover"
              />
              <% } else { %> No image <% } %>
            </td>
            <td><%= course.name %></td>
            <td><%= course.fees %></td>
            <td><%= course.rating %></td>
            <td>
              <a
                href="/edit-course/<%= course._id %>"
                class="btn btn-sm btn-primary"
                >Edit</a
              >
              <form
                id="delete-form-<%= course._id %>"
                action="/delete-course/<%= course._id %>"
                method="POST"
                style="display: inline-block"
              >
                <button
                  type="button"
                  class="btn btn-sm btn-danger"
                  onclick="confirmDelete('<%= course._id %>')"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="5" class="text-center text-muted">
              No courses available.
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <a href="/" class="btn btn-secondary mt-4">Back to Home</a>

    <!-- Required Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-bs4.min.js"></script>

    <!-- Summernote Init Script -->
    <script src="/js/script.js"></script>
    <script>
      $(document).ready(function () {
        $(".summernote").summernote({
          height: 200,
        });
      });

      $(document).ready(function () {
        $(".summernote").summernote({ height: 200 });

        let topicIndex = 1;

        $("#add-topic").click(function () {
          $("#topics-wrapper").append(`
          <div class="topic-row">
            <input type="text" name="topics[${topicIndex}][name]" class="form-control" placeholder="Topic Name" required />
            <input type="text" name="topics[${topicIndex}][duration]" class="form-control" placeholder="Duration" required />
            <button type="button" class="btn btn-danger remove-topic">&times;</button>
          </div>
        `);
          topicIndex++;
        });

        $("#topics-wrapper").on("click", ".remove-topic", function () {
          $(this).closest(".topic-row").remove();
        });
      });
      function confirmDelete(courseId) {
        Swal.fire({
          title: "Are you sure?",
          text: "This course will be permanently deleted!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#d33",
          cancelButtonColor: "#3085d6",
          confirmButtonText: "Yes, delete it!",
          reverseButtons: true,
        }).then((result) => {
          if (result.isConfirmed) {
            document.getElementById(`delete-form-${courseId}`).submit();
          }
        });
      }
    </script>
  </body>
</html>
