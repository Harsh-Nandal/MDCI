<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <style>
      #addForm {
        display: none;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/sidebar') %>
    <div class="dashboard-main-wrapper">
      <div
        class="top-navbar flex-between gap-16"
        style="background-color: white"
      >
        <div class="flex-align gap-16">
          <!-- Toggle Button Start -->
          <button
            type="button"
            class="toggle-btn d-xl-none d-flex text-26 text-gray-500"
          >
            <i class="ph ph-list"></i>
          </button>
          <!-- Toggle Button End -->

          <h1>University </h1>
        </div>

        <div class="flex-align gap-16">
          <a
            href="/admin/logout"
            class="py-12 text-15 px-20 hover-bg-danger-50 text-gray-300 hover-text-danger-600 rounded-8 flex-align gap-8 fw-medium text-15"
          >
            <span class="text-2xl text-danger-600 d-flex"
              ><i class="ph ph-sign-out"></i
            ></span>
            <span class="text">Log Out</span>
          </a>
        </div>
      </div>

      <div class="container mt-5">
        <h2>Edit University</h2>
        <form
          action="/admin/edit-university/<%= university._id %>"
          method="POST"
        >
          <div class="form-group">
            <label>Name</label>
            <input
              type="text"
              name="name"
              value="<%= university.name %>"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Rating</label>
            <input
              type="number"
              step="0.1"
              name="rating"
              value="<%= university.rating %>"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Enrolled</label>
            <input
              type="number"
              name="enrolled"
              value="<%= university.enrolled %>"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Location</label>
            <input
              type="text"
              name="location"
              value="<%= university.location %>"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Established Year</label>
            <input
              type="number"
              name="stablishedYear"
              value="<%= university.stablishedYear %>"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Timing Content</label>
            <textarea name="timingContent" class="form-control">
<%= university.timingContent %></textarea
            >
          </div>
          <div class="form-group">
            <label>Brief Content</label>
            <textarea name="briefContent" class="form-control">
<%= university.briefContent %></textarea
            >
          </div>
          <div class="form-group">
            <label>About Content</label>
            <textarea name="aboutContent" class="form-control">
<%= university.aboutContent %></textarea
            >
          </div>
          <div class="form-group">
            <label>Meta Title</label>
            <input
              type="text"
              name="metaTitle"
              value="<%= university.metaTitle %>"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Meta Description</label>
            <input
              type="text"
              name="metaDescription"
              value="<%= university.metaDescription %>"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label>Meta Keyword</label>
            <input
              type="text"
              name="metaKeyword"
              value="<%= university.metaKeyword %>"
              class="form-control"
            />
          </div>
          <button type="submit" class="btn btn-success">Update</button>
          <a href="/admin/universities" class="btn btn-secondary">Back</a>
        </form>
      </div>
    </div>
  </body>
</html>
