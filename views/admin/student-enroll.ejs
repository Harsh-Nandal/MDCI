<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>

    <style>
      .student-image {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
      }
      .flex-align {
        display: flex;
        align-items: center;
        gap: 8px;
        flex-wrap: nowrap; /* Prevent wrapping */
      }

      .gap-8 {
        gap: 8px;
      }
      .h6 {
        font-size: 1rem;
      }
      .fw-medium {
        font-weight: 500;
      }
      .text-gray-300 {
        color: #6c757d;
      }
      .w-40 {
        width: 40px;
      }
      .h-40 {
        height: 40px;
      }
      .rounded-circle {
        border-radius: 50%;
      }
      .fixed-width {
        width: 40px;
      }
      .text-13 {
        font-size: 13px;
      }
      .bg-warning-50 {
        background-color: #fff3cd;
      }
      .text-warning-600 {
        color: #856404;
      }
      .bg-warning-600 {
        background-color: #856404;
      }
      .rounded-pill {
        border-radius: 50rem;
      }
      .bg-main-50 {
        background-color: #e3f2fd;
      }
      .text-main-600 {
        color: #0275d8;
      }
      .hover-bg-main-600:hover {
        background-color: #0275d8;
        color: #fff;
      }
      .hover-text-white:hover {
        color: #fff;
      }
      .py-2 {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
      }
      .px-8 {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
      }
      .px-14 {
        padding-left: 0.875rem;
        padding-right: 0.875rem;
      }

      @media (max-width: 991.98px) {
        .student-image {
          width: 32px;
          height: 32px;
        }

        .card-body table {
          display: block;
          overflow-x: auto;
          white-space: nowrap;
        }

        .fixed-width {
          width: auto;
        }
      }
      @media (max-width: 992px) {
        .container {
          width: 95% !important;
          max-width: 95% !important;
        }
      }
      @media (max-width: 992px) {
        .row > [class*="col-md-"] {
          flex: 0 0 33.3333%; /* Keep 3 columns */
          max-width: 33.3333%;
        }
      }
      @media (max-width: 992px) {
        .flex-align {
          flex-wrap: nowrap !important;
        }
      }
    </style>
  </head>
  <body>
    <%- include('../partials/sidebar') %>
    <div class="dashboard-main-wrapper">
      <div
        class="top-navbar flex-between gap-16"
        style="background-color: white"
      >
        <div class="flex-align gap-16">
          <!-- Toggle Button Start -->
          <button
            type="button"
            class="toggle-btn d-xl-none d-flex text-26 text-gray-500"
          >
            <i class="ph ph-list"></i>
          </button>
          <!-- Toggle Button End -->

          <h1>Student Enrollment</h1>
        </div>

        <div class="flex-align gap-16">
          <a
            href="/admin/logout"
            class="py-12 text-15 px-20 hover-bg-danger-50 text-gray-300 hover-text-danger-600 rounded-8 flex-align gap-8 fw-medium text-15"
          >
            <span class="text-2xl text-danger-600 d-flex"
              ><i class="ph ph-sign-out"></i
            ></span>
            <span class="text">Log Out</span>
          </a>
        </div>
      </div>

      <div class="container mt-5">
        <h2 class="mb-4">Student Enrollment</h2>
        <button class="btn btn-primary mb-3" onclick="toggleForm()">
          + Enroll New Student
        </button>
        <div id="enrollForm" style="display: none">
          <div class="card mb-4">
            <div class="card-header">New Student Form</div>
            <div class="card-body">
              <form
                action="/student/enroll"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <div class="col-md-4 mb-3">
                    <label for="regNo">Registration No</label>
                    <input
                      type="text"
                      name="regNo"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="name">Name</label>
                    <input
                      type="text"
                      name="name"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="dob">Date of Birth</label>
                    <input
                      type="date"
                      name="dob"
                      class="form-control"
                      required
                    />
                  </div>
                  <!-- âœ… Course dropdown added -->
                  <div class="col-md-4 mb-3">
                    <label for="course">Course</label>
                    <select name="course" class="form-control" required>
                      <option value="">Select Course</option>
                      <% courses.forEach(course => { %>
                      <option value="<%= course._id %>">
                        <%= course.name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="gender">Gender</label>
                    <select name="gender" class="form-control">
                      <option value="Male">Male</option>
                      <option value="Female">Female</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="contactNo">Contact No</label>
                    <input type="text" name="contactNo" class="form-control" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="aadharNo">Aadhar Number</label>
                    <input type="text" name="aadharNo" class="form-control" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="bloodGroup">Blood Group</label>
                    <input type="text" name="bloodGroup" class="form-control" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="fatherName">Father's Name</label>
                    <input type="text" name="fatherName" class="form-control" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="fatherOccupation">Father's Occupation</label>
                    <input
                      type="text"
                      name="fatherOccupation"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="motherName">Mother's Name</label>
                    <input type="text" name="motherName" class="form-control" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="motherOccupation">Mother's Occupation</label>
                    <input
                      type="text"
                      name="motherOccupation"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="parentsNo">Parents Phone No</label>
                    <input type="text" name="parentsNo" class="form-control" />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="qualification">Qualification</label>
                    <input
                      type="text"
                      name="qualification"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="maritalStatus">Marital Status</label>
                    <input
                      type="text"
                      name="maritalStatus"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="studentOccupation">Student Occupation</label>
                    <input
                      type="text"
                      name="studentOccupation"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="dateOfAdmission">Date of Admission</label>
                    <input
                      type="date"
                      name="dateOfAdmission"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="referenceBy">Reference By</label>
                    <input
                      type="text"
                      name="referenceBy"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="address">Address</label>
                    <textarea name="address" class="form-control"></textarea>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="password">Password</label>
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="image">Upload Photo</label>
                    <input type="file" name="image" class="form-control-file" />
                  </div>
                </div>
                <button class="btn btn-success">Submit</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Styled Student List -->
        <div class="card">
          <div class="card-header">All Students</div>
          <div class="card-body">
            <div class="table-responsive">
              <table id="studentTable" class="table table-striped">
                <thead>
                  <tr>
                    <th class="fixed-width">#</th>
                    <th class="h6 text-gray-300">Reg No</th>
                    <th class="h6 text-gray-300">Students</th>
                    <th class="h6 text-gray-300">Course</th>
                    <th class="h6 text-gray-300">DOB</th>
                    <th class="h6 text-gray-300">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach((student, index) => { %>
                  <tr>
                    <td class="fixed-width"><%= index + 1 %></td>
                    <td><%= student.regNo %></td>
                    <td>
                      <div class="flex-align gap-8">
                        <% if (student.imagePath) { %>
                        <img
                          src="<%= student.imagePath %>"
                          class="student-image"
                          alt="Student Image"
                        />
                        <% } else { %>
                        <img
                          src="/default-profile.png"
                          class="student-image"
                          alt="Default Image"
                        />
                        <% } %>
                        <span class="h6 mb-0 fw-medium text-gray-300">
                          <%= student.name %>
                        </span>
                      </div>
                    </td>
                    <td>
                      <span class="h6 mb-0 fw-medium text-gray-300">
                        <%= student.course?.name || 'N/A' %>
                      </span>
                    </td>
                    <td>
                      <span class="h6 mb-0 fw-medium text-gray-300">
                        <%= student.dob ? new
                        Date(student.dob).toLocaleDateString() : '' %>
                      </span>
                    </td>
                    <td class="text-center">
                      <a
                        href="/admin/student/edit/<%= student._id %>"
                        class="btn btn-warning btn-sm mr-2 text-dark"
                        >Edit</a
                      >
                      <a
                        href="/admin/student/<%= student._id %>/fees"
                        class="btn btn-info btn-sm mr-2 text-white"
                        >Fees</a
                      >

                      <form
                        action="/admin/student/delete/<%= student._id %>"
                        method="POST"
                        class="delete-form d-inline"
                      >
                        <button
                          type="submit"
                          class="btn btn-danger btn-sm text-white"
                        >
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Toggle enroll form visibility
      function toggleForm() {
        const form = document.getElementById("enrollForm");
        form.style.display =
          form.style.display === "none" || form.style.display === ""
            ? "block"
            : "none";
      }

      // SweetAlert2 Delete Confirmation
      document.querySelectorAll(".delete-form").forEach((form) => {
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!",
            reverseButtons: true,
          }).then((result) => {
            if (result.isConfirmed) {
              form.submit();
            }
          });
        });
      });
      // Filter table rows based on search input
      document
        .getElementById("searchInput")
        .addEventListener("input", function () {
          const filter = this.value.toLowerCase();
          const rows = document.querySelectorAll("#studentTable tbody tr");

          rows.forEach((row) => {
            // Grab text content from relevant columns (regNo, name, email, contactNo)
            const regNo = row.cells[1].textContent.toLowerCase();
            const name = row.cells[2].textContent.toLowerCase();
            const email = row.cells[3].textContent.toLowerCase();
            const phone = row.cells[4].textContent.toLowerCase();

            // Show row if any cell matches the filter, else hide
            if (
              regNo.includes(filter) ||
              name.includes(filter) ||
              email.includes(filter) ||
              phone.includes(filter)
            ) {
              row.style.display = "";
            } else {
              row.style.display = "none";
            }
          });
        });
    </script>
    <!-- jQuery + DataTables + Buttons -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <script>
      $(document).ready(function () {
        $("#studentTable").DataTable({
          dom: "Bfrtip",
          buttons: ["copy", "excel", "csv", "pdf", "print"],
        });
      });
    </script>
  </body>
</html>
